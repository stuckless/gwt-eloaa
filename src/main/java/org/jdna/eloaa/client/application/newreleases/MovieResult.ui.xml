<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m="urn:import:gwt.material.design.client.ui">
    <ui:style>
        .clickable {
            cursor: pointer;
        }
    </ui:style>
    <m:MaterialRow>
        <m:MaterialColumn grid="l12">
            <m:MaterialCard backgroundColor="white darken-1">
                <m:MaterialCardContent textColor="black">
                    <g:HorizontalPanel horizontalAlignment="LEFT">
                        <g:cell width="100">
                            <m:MaterialImage url="" ui:field="poster" paddingRight="10" styleName="{style.clickable}"/>
                        </g:cell>
                        <g:VerticalPanel>
                            <m:MaterialCardTitle ui:field="title" text="TITLE"/>
                            <m:MaterialLabel text="" ui:field="released"/>
                        </g:VerticalPanel>
                    </g:HorizontalPanel>
                </m:MaterialCardContent>
                <m:MaterialCardAction>
                    <m:MaterialLink text="ADD" iconType="ADD_TO_QUEUE" ui:field="download"/>
                </m:MaterialCardAction>
            </m:MaterialCard>
        </m:MaterialColumn>
    </m:MaterialRow>
</ui:UiBinder>